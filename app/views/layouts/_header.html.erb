<header style="background-color: #333; color: white; padding: 10px;">
  <div style="display: flex; justify-content: space-between; align-items: center;">
    <!-- サイト名 -->
    <h1 style="margin: 0; font-size: 1.5rem;">
      <%= link_to "NarraLog", root_path, style: "color: white; text-decoration: none;" %>
    </h1>

    <div>
      <% if user_signed_in? %>
        <span style="margin-right: 10px;">Welcome, <%= current_user.name.presence || current_user.email %></span>
        <%= button_to 'Logout', destroy_user_session_path, method: :delete, form: { style: "display: inline;" }, style: "color: white; background: none; border: none; padding: 0;" %>
      <% else %>
        <%= link_to 'Login', new_user_session_path, style: "color: white; margin-right: 10px;" %>
        <%= link_to 'Signup', new_user_registration_path, style: "color: white;" %>
      <% end %>  
    </div>
  </div>
</header>
