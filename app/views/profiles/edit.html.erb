<h1>プロフィールを編集</h1>

<%= form_with model: @profile, local: true do |form| %>
  <div>
    <%= form.label :name, "名前" %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :bio, "自己紹介" %><br>
    <%= form.text_area :bio %>
  </div>

  <div>
    <%= form.submit "更新する" %>
  </div>
<% end %>
